---
import Layout from "@/layouts/layout.astro";
import Navbar from "@/components/navbar/index.astro";
import Footer from "@/components/footer.astro";
import Pattern from "@/components/ui/pattern.astro";
import ContactForm from "@/components/sections/contact-form.astro";
import ScheduleCall from "@/components/sections/schedule-call.astro";
import Profile from "@/components/profile.astro";
---

<Layout title="Contact | Tigoni IM">
  <Navbar />

  <main
    aria-label="Contact content"
    class="mx-auto min-h-[calc(100vh-120px)] max-w-4xl animate-fade-in"
  >
    <Pattern className="h-14" />
    
    <!-- Hero bit for Contact -->
    <div class="px-8 py-16 md:border-x">
      <h1 class="text-5xl font-black tracking-tighter sm:text-6xl md:text-7xl">
        Let's <span class="text-primary/60">collaborate.</span>
      </h1>
      <p class="mt-6 max-w-xl text-lg text-muted-foreground/80 leading-relaxed">
        Whether you have a specific project in mind or just want to explore the possibilities of Web3 and high-end backend systems, I'm here to help.
      </p>
    </div>

    <Pattern />
    <ContactForm />
    <Pattern />
    <ScheduleCall />
    <Pattern />
    <Profile />
    <Pattern />
  </main>

  <Footer />
</Layout>
