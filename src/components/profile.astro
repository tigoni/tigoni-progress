---
import LouaiAvatar from "@/components/ui/louai-avatar.astro";
import Box from "@/components/box/index.astro";
import BoxContent from "@/components/box/content.astro";

import { PROFILE_INFO } from "@/lib/constants/profile";
import { Briefcase, PhoneCallIcon } from "lucide-react";

import VerifiedIcon from "@/components/ui/icons/verified.astro";
import XIcon from "@/components/ui/icons/x.astro";
import GithubIcon from "@/components/ui/icons/github.astro";
import LinkedinIcon from "@/components/ui/icons/linkedin.astro";
---

<div class="screen-line-after relative flex items-center p-6 md:border-x transition-colors duration-500 hover:bg-muted/10">
  <div class="shrink-0">
    <div class="relative z-1 mx-0.5 my-1">
      <LouaiAvatar
        className="size-24 rounded-full ring-2 ring-border/50 ring-offset-4 ring-offset-background sm:size-32 transition-transform duration-500 hover:scale-105"
      />
    </div>
  </div>

  <div class="flex flex-1 flex-col">
    <div class="flex grow items-end pb-1 pl-6">
      <div class="line-clamp-1 font-mono text-[10px] uppercase tracking-widest text-muted-foreground/70">
        {PROFILE_INFO.slogan}
      </div>
    </div>

    <div class="">
      <h1 class="flex items-center gap-x-3 pl-6 text-3xl font-black tracking-tight">
        {PROFILE_INFO.displayName}
        <VerifiedIcon class="size-5 text-blue-500 drop-shadow-sm" />
      </h1>

      <div class="py-1 pl-6">
        <p class="text-base font-medium text-muted-foreground">
          {PROFILE_INFO.role}
        </p>
      </div>
    </div>
  </div>
</div>

