---
import Box from "@/components/box/index.astro";
import BoxHeader from "@/components/box/header.astro";
import BoxTitle from "@/components/box/title.astro";
import BoxContent from "@/components/box/content.astro";
import { TECH_STACK } from "@/lib/constants/tech-stack";
---

<Box>
  <BoxHeader>
    <BoxTitle>Tech Stack</BoxTitle>
  </BoxHeader>
  <BoxContent>
    <div
      class="grid grid-cols-[repeat(auto-fill,minmax(140px,1fr))] gap-2"
      style="content-visibility: auto; contain-intrinsic-size: auto 48px;"
    >
      {
        TECH_STACK.map(item => (
          <a
            href={item.href}
            target="_blank"
            rel="noopener noreferrer"
            class:list={[
              "flex h-11 items-center gap-3 rounded-lg border border-border/40 bg-muted/20 px-4",
              "transition-all duration-300 hover:bg-muted/50 hover:border-border hover:shadow-sm",
            ]}
          >
            {item.icon && (
              <span class="flex size-5 items-center justify-center text-muted-foreground transition-colors duration-300 group-hover:text-foreground">
                <item.icon className="size-5" />
              </span>
            )}
            <span class="truncate text-sm font-medium tracking-tight">
              {item.title}
            </span>
          </a>
        ))
      }
    </div>
  </BoxContent>
</Box>
